{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "skipLibCheck": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": [ "esnext" ],
    "types": [ "node" ],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
